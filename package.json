{
  "name": "nodeJS-hexagonal-arch-boilerplate",
  "version": "1.0.0",
  "description": "hexagonal architecture boilerplate for Node.js applications",
  "main": "server.js",
  "engine": {
    "node": "22.14.0",
    "pnpm": ">=10.8.1"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage run",
    "build": "yarn test && tsup src"
  },
  "dependencies": {
    "fastify": "^5.3.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^16.5.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@prisma/client": "^6.9.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "keywords": [
    "hexagonal",
    "architecture",
    "boilerplate",
    "nodejs",
    "express",
    "typescript",
    "clean-architecture"
  ],
  "author": "EoBryanDev",
  "license": "ISC",
  "packageManager": "pnpm@10.8.1"
}
